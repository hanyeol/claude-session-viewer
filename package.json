{
  "name": "claude-session-viewer",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "bin": {
    "claude-session-viewer": "./bin/cli.js"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
