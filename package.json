{
  "name": "claude-session-viewer",
  "version": "0.2.0",
  "type": "module",
  "bin": {
    "claude-session-viewer": "./bin/cli.js"
  },
  "files": [
    "bin/",
    "dist/",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "node bin/dev.js",
    "dev:server": "tsx watch src/server/index.ts",
    "dev:client": "vite",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "vite build --outDir dist/client",
    "build": "npm run build:server && npm run build:client",
    "start": "node dist/server/index.js",
    "prepack": "npm run build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hanyeol/claude-session-viewer.git"
  },
  "bugs": {
    "url": "https://github.com/hanyeol/claude-session-viewer/issues"
  },
  "keywords": [
    "claude",
    "claude-code",
    "session-viewer",
    "cli"
  ],
  "homepage": "https://github.com/hanyeol/claude-session-viewer",
  "author": "Hanyeol Cho <hanyeol.cho@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@fastify/static": "^7.0.3",
    "@fastify/websocket": "^10.0.1",
    "@tanstack/react-query": "^5.17.19",
    "chokidar": "^3.5.3",
    "date-fns": "^3.0.6",
    "fastify": "^4.25.2",
    "fuse.js": "^7.0.0",
    "get-port": "^7.1.0",
    "highlight.js": "^11.9.0",
    "marked": "^11.1.1",
    "open": "^11.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.11.0",
    "react-window": "^1.8.10",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  }
}
